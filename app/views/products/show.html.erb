<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <div>
        <h3>Write a Review</h3>
        <dl>
          <%= form_for [@product, @review] do |f| %>
            <dt>Description:</dt>
            <dd><%= f.text_area :description %></dd>
            <dt>Rating:</dt>
            <dd><%= f.select :rating, [1, 2, 3, 4, 5] %>
            <dt style="padding-top: 10px"><%= f.submit %></dt>
          <% end %>
        </dl>
      </div>
    <% end %>

    <div>
      <h3>Reviews</h3>
      <dl>
        <% @reviews.each do |review|%>
          <dt>Description: <%= review.description%></dt>
          <dt>Rating: <%= review.rating %></dt>
        <% end %>
      </dl>
    </div>

  </article>

</section>
